<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CFBEC4"
    tools:context=".View.Add_Fragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/title_d_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/edittext_shape"
                android:backgroundTint="#EDDAE0"
                android:ems="10"
                android:gravity="top"
                android:hint="Title"
                android:inputType="textPersonName"
                android:padding="15dp" />

            <EditText
                android:id="@+id/details_d_edittext"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="32dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_shape"
                android:backgroundTint="#EDDAE0"
                android:ems="10"
                android:gravity="top"
                android:hint="Details"
                android:inputType="textMultiLine|textPersonName"
                android:maxLines="20"
                android:padding="20dp" />

            <EditText
                android:id="@+id/deadline_d_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edittext_shape"
                android:backgroundTint="#EDDAE0"
                android:baselineAligned="false"
                android:editable="false"
                android:ems="10"
                android:focusable="false"
                android:gravity="top"
                android:hint="Dead Line"
                android:inputType="textPersonName"
                android:padding="15dp"
                android:textColor="#130F0F" />

            <Button
                android:id="@+id/delete_button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:backgroundTint="@color/button"
                android:gravity="center"
                android:text="Delete"
                android:textColor="#F8F4F4"
                android:textSize="12sp"
                app:cornerRadius="25dp"
                app:icon="@drawable/ic_baseline_delete_forever_24"
                app:iconGravity="textEnd"
                app:iconTint="#9E6E6E" />

            <Button
                android:id="@+id/update_button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:backgroundTint="@color/button"
                android:text="Edit"
                android:textColor="#F8F4F4"
                android:textSize="12sp"
                app:cornerRadius="25dp"
                app:icon="@drawable/ic_baseline_edit_24"
                app:iconGravity="textEnd"
                app:iconTint="#9E6E6E" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>